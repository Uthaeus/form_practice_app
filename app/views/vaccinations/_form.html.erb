  <div class="field">
    <%= form.label :received %>
    <%= form.text_area :received, id: :vaccination_received %>
  </div>

  <div class="field">
    <%= form.label :expiration %>
    <%= form.text_area :expiration, id: :vaccination_expiration %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

